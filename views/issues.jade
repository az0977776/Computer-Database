extends layout

block variables
  var route = #{route}
  
block content
  div.container
    h1 Issues
    ul.collection.with-header
      - each issue in issues
        li.collection-item.avatar.indigo.lighten-5
          - var level = parseInt(issue.level) + 1;
          case level
            when 1
              i.material-icons.circle.green
            when 2
              i.material-icons.circle.yellow
            default
              i.material-icons.circle.red
          span.title 
            b #{issue.name}
          p Description: #{issue.description}
          p Severity: #{level}
          a(href="#").secondary-content
            i.material-icons close
