extends layout

block variables
  var route = #{route}

block content
  div.row
    form.col.s6.offset-s3
      h3 Sign Up
      div.row
        div.input-field.col.s12
          input(id="username" type="text" class="validate")
          label(for="username" class="active") Name
      div.row
        div.input-field.col.s12
          input(id="password" type="password" class="validate")
          label(for="password" class="active") Password
      div.row
        div.input-field.col.s12
          input(id="password" type="password" class="validate")
          label(for="password" class="active") Confirm Password
      div.row
        button.btn.waves-effect.waves-light(type="submit" name="action") Submit
